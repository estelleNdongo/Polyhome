<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.devices.DevicesActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="40dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FlÃ¨che retour -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¹"
            android:textSize="22sp"
            android:textColor="@color/primary"
           />

        <!-- Titre maison -->
        <TextView
            android:id="@+id/titleHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0F172A"
            android:layout_marginStart="10dp"
            tools:text="Maison #658" />
    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tabDevices"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Devices"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/tab_active"
            android:layout_marginEnd="3dp" />

        <TextView
            android:id="@+id/tabUsers"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Users"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#64748B"
            android:gravity="center"
            android:background="@drawable/tab_inactive"
            android:layout_marginStart="3dp" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filterSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        android:paddingTop="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/filterAll"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Tous"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/tab_active"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/filterShutter"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Volets"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#64748B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/tab_inactive"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/filterGarage"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Garages"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#64748B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/tab_inactive"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/filterLight"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="LumiÃ¨res"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#64748B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/tab_inactive" />
        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/labelDevices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PÃ‰RIPHÃ‰RIQUES"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#64748B"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ListView
        android:id="@+id/listDevices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="14dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterSection" />

    <LinearLayout
        android:id="@+id/addUserSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="14dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/filterSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/inputAddUser"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:hint="user Ã  inviter"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="12sp"
            android:textColor="#0F172A"
            android:textColorHint="#94A3B8"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/btnAddUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/btn_add_user" />
    </LinearLayout>

    <!-- ListView des users (initialement cachÃ©e) -->
    <ListView
        android:id="@+id/listUsers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addUserSection" />

    <!-- Bottom bar commande groupÃ©e (visible seulement en mode sÃ©lection) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- SÃ©parateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#E2E8F0"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/labelBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMANDE GROUPÃ‰E â€” 0 sÃ©lectionnÃ©s"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#64748B"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/btnGroupOpen"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="OPEN"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/btn_command_open"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/btnGroupClose"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="CLOSE"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:gravity="center"
                android:background="@drawable/btn_command_default"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/btnGroupStop"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="STOP"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#B45309"
                android:gravity="center"
                android:background="@drawable/btn_command_stop"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/btnModeNuit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_mode_nuit"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode Nuit"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>