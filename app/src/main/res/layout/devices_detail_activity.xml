<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.devices.DeviceDetailActivity">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="‹"
            android:textSize="22sp"
            android:textColor="@color/primary"
            android:onClick="goBack" />

        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Détail périphérique"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0F172A"
            android:layout_marginStart="10dp" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <FrameLayout
                android:id="@+id/detailIconFrame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/logo_bg"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/detailIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="Périphérique"
                    app:srcCompat="@drawable/ic_shutter" />
            </FrameLayout>


            <TextView
                android:id="@+id/detailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                tools:text="Shutter 1.1" />


            <TextView
                android:id="@+id/detailBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/badge_open"
                android:textColor="@color/primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp"
                tools:text="Ouvert" />


            <LinearLayout
                android:id="@+id/infoBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/info_box_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginBottom="24dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="11sp"
                        android:textColor="#64748B" />
                    <TextView
                        android:id="@+id/infoType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#0F172A"
                        android:textStyle="bold"
                        tools:text="Rolling Shutter" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp">
                    <TextView
                        android:id="@+id/infoStateLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ouverture"
                        android:textSize="11sp"
                        android:textColor="#64748B" />
                    <TextView
                        android:id="@+id/infoStateValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#0F172A"
                        android:textStyle="bold"
                        tools:text="1" />
                </LinearLayout>


                <View
                    android:id="@+id/separatorMode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0" />


                <LinearLayout
                    android:id="@+id/rowMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mode"
                        android:textSize="11sp"
                        android:textColor="#64748B" />
                    <TextView
                        android:id="@+id/infoModeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#0F172A"
                        android:textStyle="bold"
                        tools:text="0" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMMANDES"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#64748B"
                android:layout_marginBottom="10dp" />


            <LinearLayout
                android:id="@+id/btnCommand1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_command_open">
                <ImageView
                    android:id="@+id/iconCommand1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icône"
                    app:srcCompat="@drawable/ic_open" />
                <TextView
                    android:id="@+id/textCommand1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    tools:text="OPEN" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnCommand2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_command_default">
                <ImageView
                    android:id="@+id/iconCommand2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icône"
                    app:srcCompat="@drawable/ic_close" />
                <TextView
                    android:id="@+id/textCommand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"
                    tools:text="CLOSE" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnCommand3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/btn_command_stop">
                <ImageView
                    android:id="@+id/iconCommand3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icône"
                    app:srcCompat="@drawable/ic_stop" />
                <TextView
                    android:id="@+id/textCommand3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#B45309"
                    tools:text="STOP" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>