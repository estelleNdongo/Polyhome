<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:paddingStart="14dp"
    android:paddingEnd="14dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <!-- Icône maison -->
    <FrameLayout
        android:id="@+id/houseIconFrame"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/logo_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/houseIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:contentDescription="Maison"
            app:srcCompat="@drawable/ic_house" />
    </FrameLayout>

    <!-- Nom de la maison -->
    <TextView
        android:id="@+id/houseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        app:layout_constraintStart_toEndOf="@id/houseIconFrame"
        app:layout_constraintEnd_toStartOf="@id/houseBadge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        tools:text="Maison #1" />

    <!-- Badge Propriétaire / Invité -->
    <TextView
        android:id="@+id/houseBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textStyle="bold"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/badge_owner"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@id/arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        tools:text="Propriétaire" />

    <!-- Flèche -->
    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="›"
        android:textSize="20sp"
        android:textColor="#CBD5E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>