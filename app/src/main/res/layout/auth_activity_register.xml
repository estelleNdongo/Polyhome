<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.auth.RegisterActivity">

    <!-- Image de fond -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background1"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Logo -->
    <FrameLayout
        android:id="@+id/logoFrame"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/logo_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:contentDescription="PolyHome"
            app:srcCompat="@drawable/ic_house" />
    </FrameLayout>

    <!-- Titre -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PolyHome"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        app:layout_constraintTop_toBottomOf="@id/logoFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp" />

    <!-- Sous-titre -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créez votre compte"
        android:textSize="12sp"
        android:textColor="#64748B"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Label Email -->
    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#64748B"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Input Email -->
    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:hint="votre@email.com"
        android:textColor="#0F172A"
        android:textSize="13sp"
        android:inputType="textEmailAddress"
        android:background="@drawable/input_bg"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        app:layout_constraintTop_toBottomOf="@id/labelEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        tools:text="" />

    <!-- Label Mot de passe -->
    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MOT DE PASSE"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#64748B"
        app:layout_constraintTop_toBottomOf="@id/registerEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Input Mot de passe -->
    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:hint="••••••••"
        android:textColor="#0F172A"
        android:textSize="13sp"
        android:inputType="textPassword"
        android:background="@drawable/input_bg"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        app:layout_constraintTop_toBottomOf="@id/labelPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        tools:text="" />

    <!-- Bouton Créer mon compte -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_primary"
        android:onClick="register"
        android:text="Créer mon compte"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerPassword" />

    <!-- Texte : vous avez déjà un compte ? -->
    <TextView
        android:id="@+id/textAlreadyAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vous avez déjà un compte ?"
        android:textSize="13sp"
        android:textColor="#64748B"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Bouton Se connecter -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="Se connecter"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_primary"
        android:onClick="goToLogin"
        app:layout_constraintTop_toBottomOf="@id/textAlreadyAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>